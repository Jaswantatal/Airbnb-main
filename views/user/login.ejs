<%layout("layouts/boilerplate")%>

<div class="row mt-3">
    <div class="col-6 offset-3"> <h1>Login</h1> </div>

  <div class="col-6 offset-3">
    <div class="form-container">
      <form method="post" action="/login" class="needs-validation" novalidate>
        <!-- Username Field -->
        <div class="form-group mb-3">
          <label for="username" class="form-label">Username</label>
          <input
            id="username"
            name="username"
            type="text"
            class="form-control"
            required
          />
        </div>

      

        <!-- Password Field -->
        <div class="form-group mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            id="password"
            name="password"
            type="password"
            class="form-control"
            required
          />
        </div>

        <!-- Submit Button -->
        <button class="btn btn-success w-50 offset-3" type="submit">Login</button>
      </form>
    </div>
  </div>
</div>
